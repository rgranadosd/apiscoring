# Dockerfile simple para servir los archivos ya construidos
FROM nginx:alpine

# Copiar los archivos construidos
COPY packages/spa-apiscoringviewer/dist/ /usr/share/nginx/html/

# Exponer puerto
EXPOSE 3000

# Configurar nginx para el puerto 3000
RUN echo 'server { listen 3000; location / { root /usr/share/nginx/html; try_files $uri $uri/ /index.html; } }' > /etc/nginx/conf.d/default.conf

# Iniciar nginx
CMD ["nginx", "-g", "daemon off;"] 